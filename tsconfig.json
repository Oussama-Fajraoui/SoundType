{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "dist",
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true
  },
  "include": ["index.ts", "functions/**/*.ts"],
  "exclude": ["node_modules", "dist", "client", "client/**/*"],
  "compileOnSave": true
}



